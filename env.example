# ==============================================
# RAG Chat Storage Microservice Configuration
# ==============================================

# Server Configuration
SERVER_PORT=8080

# Security Configuration
API_KEY=your-secure-api-key-change-in-production

# Rate Limiting Configuration
# Number of requests per minute per client
RATE_LIMIT_RPM=60
# Maximum bucket capacity for burst requests
RATE_LIMIT_CAPACITY=100

# CORS Configuration
# Allowed origins (comma-separated or * for all)
CORS_ALLOWED_ORIGINS=*

# Logging Configuration
# Available levels: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
# Database query logging level
DB_LOG_LEVEL=WARN

# Database Configuration (H2 in-memory)
# Note: H2 configuration is set in application.yml
# For production, consider using PostgreSQL or MySQL

# ==============================================
# Development/Testing Settings
# ==============================================

# Set to true for detailed error messages (development only)
DEBUG_MODE=false

# Additional CORS settings for development
CORS_ALLOW_CREDENTIALS=true